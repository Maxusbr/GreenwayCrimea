	    {
		    @Html.StaticBlock("TextOnMain2")
	    }
        @Html.Action("NewsSubscription", "News")

        <div class="blocks-on-main-horizontals">
            @Html.Action("NewsBlock", "News")
            @Html.Action("VotingBlock", "Voting")
