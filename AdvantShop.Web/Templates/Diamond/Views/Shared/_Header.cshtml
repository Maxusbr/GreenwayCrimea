<div class="container container-fluid site-head-inner">
    <div class="row middle-xs">
        <div class="col-xs site-head-logo-block site-head-logo">
            @Html.Action("Logo", "Common")
        </div>
        @*<div class="col-xs site-head-menu-col">
            @Html.StaticBlock("headerСenterBlock", "header-static-block-center")

            @Html.StaticBlock("headerСenterBlockAlt", "header-static-block-center-alt")
        </div>*@
        <div class="col-xs-9 site-head-phone-col">
            <div class="row end-xs middle-xs">
                @if (SettingsDesign.SearchBlockLocation == SettingsDesign.eSearchBlockLocation.TopMenu)
                {
                    @Html.Action("SearchBlock", "Search")
                }
                @Html.StaticBlock("headerRightBlock", "header-static-block-right")
                @Html.Action("ShoppingCart", "Cart")
                @Html.RenderModules("site_top_right")
                <div class="site-head-phone-wrap">
                    <div class="cs-t-1 site-head-phone" data-zone-current data-ng-bind-html="zone.Phone" data-start-val="{Phone: '@Html.GetCityPhone(true)'}">@Html.GetCityPhone()</div>
                    @Html.StaticBlock("email", "static-block-email-header")
                </div>
            </div>
        </div>
    </div>
</div>
