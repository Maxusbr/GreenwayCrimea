@model AdvantShop.Web.Admin.Models.Rules.CleanExpiredBonusRuleModel

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span>Отсылать уведомление</span>
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
           @Html.CheckBoxFor(x => x.NeedSms, new { @class = "adv-checkbox-input", ng_model = "rule.Rule.NeedSms" })
            <span class="adv-checkbox-emul"></span>
        </label>
    </div>
</div>

<div class="form-group row middle-xs" ng-if="rule.Rule.NeedSms">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Дней до уведомления</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.DayBefore, new { @class = "form-control", ng_model = "rule.Rule.DaysBefore", required = "required", validation_input_text = "Дней до уведомления" })
    </div>
</div>
