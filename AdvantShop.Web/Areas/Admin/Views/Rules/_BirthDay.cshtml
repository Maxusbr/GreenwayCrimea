@model AdvantShop.Web.Admin.Models.Rules.BirthDayRuleModel

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Начислить доп. бонусы на карту</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.GiftBonus, new { @class = "form-control", ng_model = "rule.Rule.GiftBonus", required = "required" })
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Дней до дня рождения держателя карты</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.DaysBefore, new { @class = "form-control", ng_model = "rule.Rule.DaysBefore", required = "required" })
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Доп.бонусы должны действовать в течение (дней)
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.BonusAvailableDays, new { @class = "form-control", ng_model = "rule.Rule.BonusAvailableDays" })
        @*<help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Срок доставки">
                Срок доставки, как отрезок времени, в который данный метод доставки сможет доставить товар.<br><br>
                Например: 1-2 дня.
            </help-trigger>*@
    </div>
</div>
