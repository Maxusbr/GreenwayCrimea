@model AdvantShop.Web.Admin.Models.Rules.NewCardRuleModel

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Начислить доп. бонусы на карту</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.GiftBonus, new { @class = "form-control", ng_model = "rule.Rule.GiftBonus", required = "required", validation_input_text = "Начислить доп. бонусы на карту" })
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="">Доп.бонусы должны действовать в течение (дней)</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.BonusAvailableDays, new { @class = "form-control", ng_model = "rule.Rule.BonusAvailableDays"})
    </div>
</div>

