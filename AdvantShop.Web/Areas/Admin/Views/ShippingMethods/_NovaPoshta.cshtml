@model AdvantShop.Web.Infrastructure.Admin.ShippingMethods.NovaPoshtaShippingAdminModel



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Ключ API</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ApiKey, new {ng_model = "shippingMethod.Params.APIKey", @class = "form-control", required = "required", validation_input_text = "Ключ API" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Ключ API">
                Получите ключ API от менеджера компании "Новая Почта"
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Город отправления</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.CityFrom, new {ng_model = "shippingMethod.Params.CityFrom", @class = "form-control", required = "required", validation_input_text = "Город отправления" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Город отправления">
                Введите город отправления
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Вид доставки</span>
        </div>
        <div class="col-xs-6 relative">

            @Html.DropDownList("DeliveryType", Model.DeliveryTypes, new { ng_model = "shippingMethod.Params.DeliveryType", ng_init= "shippingMethod.Params.DeliveryType='" + Model.DeliveryType + "'", @class = "form-control", required = "required", validation_input_text = "Город отправления" })

            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Вид доставки">
                Выберите вид доставки
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Курс к базовой валюте</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.Rate, new { ng_model = "shippingMethod.Params.Rate", @class = "form-control", required = "required", validation_input_text = "Курс к базовой валюте" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Курс к базовой валюте">
                Введите курс к базовой валюте магазина
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Вес по умолчанию</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.DefaultWeight, new { ng_model = "shippingMethod.Params.DefaultWeight", @class = "form-control", required = "required", validation_input_text = "Вес по умолчанию" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Вес по умолчанию">
                Вес по умолчанию, если в товаре не указано, 0,1 кг - 100гр.
            </help-trigger>
        </div>
    </div>



