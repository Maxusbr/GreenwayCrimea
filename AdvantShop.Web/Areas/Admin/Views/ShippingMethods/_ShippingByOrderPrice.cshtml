@using AdvantShop.Repository.Currencies
@model AdvantShop.Web.Infrastructure.Admin.ShippingMethods.ShippingByOrderPriceShippingAdminModel


    <div class="form-group row">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Сумма заказа</span>
        </div>
        <div class="col-xs-8 relative">
            <shipping-by-order-price-method method-id="@Model.ShippingMethodId"
                                            price-ranges="@Model.PriceRanges"
                                            currency-label="@(CurrencyService.CurrentCurrency.Symbol)">
            </shipping-by-order-price-method>
        </div>
    </div>



    <div class="form-group row">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Рассчитывается на основе</span>
        </div>
        <div class="col-xs-6 relative">
            <div class="inline valign-middle">
                <div class="m-b-sm">
                    <label class="adv-radio-label">
                        Корзины
                        @Html.RadioButton("DependsOnCartPrice", "true", Model.DependsOnCartPrice == true, new { @class = "adv-radio-input", ng_model = "shippingMethod.Params.DependsOnCartPrice", required = "required", validation_input_text = "Рассчитывается на основе" })
                        <span class="adv-radio-emul"></span>
                    </label>
                </div>
                <div>
                    <label class="adv-radio-label">
                        Конечной стоимости заказа
                        @Html.RadioButton("DependsOnCartPrice", "false", Model.DependsOnCartPrice == false, new { @class = "adv-radio-input", ng_model = "shippingMethod.Params.DependsOnCartPrice", required = "required", validation_input_text = "Рассчитывается на основе" })
                        <span class="adv-radio-emul"></span>
                    </label>
                </div>
            </div>

            <help-trigger class="ng-cloak" data-title="Рассчет стоимости доставки">
                Рассчитывать стоимость доставки исходя только из стоимости корзины (без учета скидки на сумму заказа). 
                В противном случае учитывается полная сумма к оплате.
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span>Срок доставки</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.DeliveryTime, new { ng_model = "shippingMethod.Params.DeliveryTime", @class = "form-control" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Срок доставки">
                Срок доставки, как отрезок времени, в который данный метод доставки сможет доставить товар.<br><br>
                Например: 1-2 дня.
            </help-trigger>
        </div>
    </div>
