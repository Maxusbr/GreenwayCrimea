@model AdvantShop.Web.Infrastructure.Admin.ShippingMethods.FixedRateShippingAdminModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Цена доставки</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ShippingPrice, new { ng_model = "shippingMethod.Params.ShippingPrice", @class = "form-control", required = "required", validation_input_text = "Цена доставки" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Стомость доставки">
                Стомость доставки. Цена указывается в базовой валюте магазина, только числом.<br><br>
                Например: 100 (руб.)<br><br>
                Если самовывоз в вашем случае бесплатный, укажите стоимость 0.
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            Срок доставки
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.DeliveryTime, new { @class = "form-control", ng_model = "shippingMethod.Params.DeliveryTime" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Срок доставки">
                Срок доставки, как отрезок времени, в который данный метод доставки сможет доставить товар.<br><br>
                Например: 1-2 дня.
            </help-trigger>
        </div>
    </div>
