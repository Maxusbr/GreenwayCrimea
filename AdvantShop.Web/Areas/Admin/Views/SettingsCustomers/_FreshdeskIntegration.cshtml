@model AdvantShop.Web.Admin.Models.Settings.CustomersSettingsModel

<div class="setting-title">
    <h3>@T("Admin.Settings.Customers.FreshdeskIntegration")</h3>
</div>

<div class="form-group row">
    <div class="col-xs-2">
        <div class="setting-label-wrap">
            @T("Admin.Settings.Customers.FreshdeskDomain")
        </div>
    </div>
    <div class="col-xs-6">
        <label class="input-group form-label-block">
            <span class="input-group-addon fs-xs">https://</span>
            @Html.TextBoxFor(x => x.FreshdeskDomain, new { @class = "form-control input-small", ng_model = "settingsCustomers.FreshdeskDomain" })
        </label>
    </div>
</div>

<div class="form-group row">
    <div class="col-xs-2">
        <div class="setting-label-wrap">
            @T("Admin.Settings.Customers.FreshdeskWidgetCode")
        </div>
    </div>
    <div class="col-xs-6">
        @Html.TextAreaFor(x => x.FreshdeskWidgetCode, new { @class = "form-control input-small", @readonly = "true", rows = "10" })
    </div>
</div>
