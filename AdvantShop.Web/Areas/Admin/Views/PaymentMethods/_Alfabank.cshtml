@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.AlfabankPaymentModel


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Логин</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.UserName, new { ng_model = "paymentMethod.Parameters.UserName", @class = "form-control", required = "required", validation_input_text = "Логин" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Логин">
            Логин магазина, полученный при подключении
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Пароль</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.Password, new { ng_model = "paymentMethod.Parameters.Password", @class = "form-control", required = "required", validation_input_text = "Пароль" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Пароль">
            Пароль магазина, полученный при подключении
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Тестовый режим
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.UseTestMode, new { ng_model = "paymentMethod.Parameters.UseTestMode", @class = "adv-checkbox-input", ng_init = "paymentMethod.Parameters.UseTestMode=" + Model.UseTestMode.ToLowerString() })
            <span class="adv-checkbox-emul"></span>
        </label>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Логин дочернего мерчанта
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.MerchantLogin, new { ng_model = "paymentMethod.Parameters.MerchantLogin", @class = "form-control" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Логин дочернего мерчанта">
            Чтобы регистрировать заказы от имени дочернего мерчанта, укажите его логин в этом параметре
        </help-trigger>
    </div>
</div>



