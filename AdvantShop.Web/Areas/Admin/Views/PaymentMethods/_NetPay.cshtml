@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.NetPayPaymentModel


    <div class="form-group row">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Аpi-ключ</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ApiKey, new { ng_model = "paymentMethod.Parameters.ApiKey", @class = "form-control", required = "required", validation_input_text = "Аpi-ключ" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Аpi-ключы">
                Аpi-ключ
            </help-trigger>
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">API Сигнатура (secret_key)</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.AuthSign, new { ng_model = "paymentMethod.Parameters.AuthSign", @class = "form-control", required = "required", validation_input_text = "API Сигнатура (secret_key)" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="API Сигнатура">
                API Сигнатура (secret_key)
            </help-trigger>
        </div>
    </div>

    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            Тестовый режим
        </div>
        <div class="col-xs-6 relative">
            <label class="adv-checkbox-label form-label-block">
                @Html.CheckBoxFor(x => x.TestMode, new { ng_model = "paymentMethod.Parameters.TestMode", ng_init = "paymentMethod.Parameters.TestMode=" + Model.TestMode.ToLowerString(), @class = "adv-checkbox-input", validation_input_text = "Тестовый режим" })
                <span class="adv-checkbox-emul"></span>
            </label>
        </div>
    </div>