@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.ZPaymentPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Идентификатор магазина</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.Purse, new { ng_model = "paymentMethod.Parameters.Purse", @class = "form-control", required = "required", validation_input_text = "Идентификатор магазина" })
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Пароль пользователя</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.Password, new { ng_model = "paymentMethod.Parameters.Password", @class = "form-control", required = "required", validation_input_text = "Пароль пользователя" })
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Ключ для шифрования (Secret key)</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.SecretKey, new { ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control", required = "required", validation_input_text = "Ключ для шифрования (Secret key)" })
        </div>
    </div>



