@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.PlatronPaymentModel


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Идентификатор продавца</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId", @class = "form-control", required = "required", validation_input_text = "Идентификатор продавца" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Идентификатор продавца">
            Идентификатор продавца в Платрон. Выдается при подключении.
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Валюта</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.Currency, new { ng_model = "paymentMethod.Parameters.Currency", @class = "form-control", required = "required", validation_input_text = "Валюта" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Валюта">
            Валюта, в которой указана сумма
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Курс валюты</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.CurrencyValue, new { ng_model = "paymentMethod.Parameters.CurrencyValue", @class = "form-control", required = "required", validation_input_text = "Курс валюты" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Курс валюты">
            Курс валюты по отношению к валюте магазина
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Платежная система</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.PaymentSystem, new { ng_model = "paymentMethod.Parameters.PaymentSystem", @class = "form-control", required = "required", validation_input_text = "Платежная система" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Платежная система">
            Идентификатор выбранной платежной системы
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Платежный пароль</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.SecretKey, new { ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control", required = "required", validation_input_text = "Платежный пароль" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Платежный пароль">
            Используется для защиты данных, передаваемых Платроном магазину и магазином Платрону
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Передавать данные для чека
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.SendReceiptData, new { ng_model = "paymentMethod.Parameters.SendReceiptData", ng_init = "paymentMethod.Parameters.SendReceiptData=" + Model.SendReceiptData.ToLowerString(), @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
        </label>
    </div>
</div>

