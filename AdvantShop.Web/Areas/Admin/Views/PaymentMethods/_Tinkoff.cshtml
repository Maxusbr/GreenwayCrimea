@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.TinkoffPaymentModel


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Идентификатор терминала</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.TerminalKey, new { ng_model = "paymentMethod.Parameters.TerminalKey", @class = "form-control", required = "required", validation_input_text = "Идентификатор терминала" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Логин">
            Уникальный идентификатор терминала. Выдается банком на каждый магазин.
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Секретный ключ</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.SecretKey, new { ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control", required = "required", validation_input_text = "Секретный ключ" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Пароль">
            Используется для подписи запросов/ответов.
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Передавать данные для печати чека</span>
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.SendReceiptData, new { ng_model = "paymentMethod.Parameters.SendReceiptData", @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
        </label>
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="">
            Передавать данные для печати чека
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Система налогообложения
    </div>
    <div class="col-xs-6 relative">
        @Html.DropDownListFor(x => x.Taxation, Model.Taxations, new { ng_model = "paymentMethod.Parameters.Taxation", ng_init = "paymentMethod.Parameters.Taxation='" + Model.Taxation + "'", @class = "form-control" })
    </div>
    <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="">
        Используется при передаче данных для печати чека
    </help-trigger>
</div>
