@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.AvangardPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">ID (идентификационный номер торговой точки)</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ShopId, new { ng_model = "paymentMethod.Parameters.ShopId", @class = "form-control", required = "required", validation_input_text = "ID (идентификационный номер торговой точки)" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="ID">
                Уникальный идентификационный номер торговой точки
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Пароль</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ShopPassword, new { ng_model = "paymentMethod.Parameters.ShopPassword", @class = "form-control", required = "required", validation_input_text = "Пароль" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Пароль">
                Пароль для данной торговой точки
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Подпись системы эквайринга (av_sign)</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.AvSign, new { ng_model = "paymentMethod.Parameters.AvSign", @class = "form-control", required = "required", validation_input_text = "Подпись системы эквайринга (av_sign)" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Подпись системы эквайринга (av_sign)">
                Выдается техподдержкой эквайринга
            </help-trigger>
        </div>
    </div>


