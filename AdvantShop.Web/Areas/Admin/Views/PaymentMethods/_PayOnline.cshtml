@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.PayOnlinePaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">MerchantId</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId ", @class = "form-control", required = "required", validation_input_text = "MerchantId" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Идентификатор">
                Идентификатор, который Вы получаете при активации. Обязательный параметр. (Целое число) 
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Private Security Key</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.SecretKey, new {ng_model = "paymentMethod.Parameters.ScId", @class = "form-control", required = "required", validation_input_text = "Private Security Key" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Private Security Key">
                Ключ, который выдается после регистрации в PayOnline
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Код валюты ISO3</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.Currency, new {ng_model = "paymentMethod.Parameters.Currency", @class = "form-control", required = "required", validation_input_text = "Код валюты ISO3" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Код валюты ISO3">
                Можно использовать следующие валюты: RUB, USD и EUR
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Курс валюты</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.CurrencyValue, new { ng_model = "paymentMethod.Parameters.CurrencyValue", @class = "form-control", required = "required", validation_input_text = "Курс валюты" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Курс валюты">
                Курс валюты по отношению к валюте магазина
            </help-trigger>
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            Платёжный инструмент
        </div>
        <div class="col-xs-6 relative">
            @Html.DropDownListFor(x => x.PayType, Model.PayTypes, new { ng_model = "paymentMethod.Parameters.PayType", ng_init= "paymentMethod.Parameters.PayType='" + Model.PayType + "'", @class = "form-control" })
        </div>
    </div>

