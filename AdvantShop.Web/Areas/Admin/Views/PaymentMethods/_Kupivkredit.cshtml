@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.KupivkreditPaymentModel


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Уникальный идентификатор магазина</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.ShopId, new { ng_model = "paymentMethod.Parameters.ShopId", @class = "form-control", required = "required", validation_input_text = "Уникальный идентификатор магазина" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Уникальный идентификатор магазина">
            Уникальный идентификатор магазина, выдается банком при подключении
        </help-trigger>
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Идентификатор витрины магазина</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.ShowCaseId, new { ng_model = "paymentMethod.Parameters.ShowCaseId", @class = "form-control", required = "required", validation_input_text = "Идентификатор витрины магазина" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Идентификатор витрины магазина">
            Идентификатор витрины магазина. В случае единственной витрины можно не указывать. Витрины – это различные сайты, зарегистрированные на одно юридическое лицо.

        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Промо-акции
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.PromoCode, new { ng_model = "paymentMethod.Parameters.PromoCode", @class = "form-control", validation_input_text = "Промо-акции" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Промо-акции">
            Указывается в случае, если на товар распространяется какие-либо акции, например, рассрочка. Подробности уточняйте у персонального менеджера Банка.
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Тестовый режим
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.UseTest, new { ng_model = "paymentMethod.Parameters.UseTest", ng_init = "paymentMethod.Parameters.UseTest=" + Model.UseTest.ToLowerString(), @class = "adv-checkbox-input", validation_input_text = "Тестовый режим" })
            <span class="adv-checkbox-emul"></span>
        </label>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Минимальная цена</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.MinimumPrice, new { ng_model = "paymentMethod.Parameters.MinimumPrice", @class = "form-control", required = "required", validation_input_text = "Минимальная цена" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Минимальная цена">
            Кнопка "Купить в кредит" будет отображаться у товаров превышающих минимальную цену (желательно > 3000 руб.)
        </help-trigger>
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Сумма первого платежа(%)</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.FirstPayment, new { ng_model = "paymentMethod.Parameters.FirstPayment", @class = "form-control", required = "required", validation_input_text = "Сумма первого платежа(%)" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Сумма первого платежа(%)">
            % от стоимости товара составит первый платеж
        </help-trigger>
    </div>
</div>


