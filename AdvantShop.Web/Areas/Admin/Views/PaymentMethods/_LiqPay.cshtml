@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.LiqPayPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Номер мерчанта</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId", @class = "form-control", required = "required", validation_input_text = "Номер мерчанта" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Номер мерчанта">
                Номер можно посмотреть в разделе Настройки магазина в системе LiqPay
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Пароль мерчанта</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MerchantSig, new {ng_model = "paymentMethod.Parameters.MerchantSig", @class = "form-control", required = "required", validation_input_text = "Пароль мерчанта" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Пароль мерчанта">
                Пароль можно посмотреть в разделе Настройки магазина в системе LiqPay
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            Валюта магазина
        </div>
        <div class="col-xs-6 relative">
            @Html.DropDownListFor(x => x.MerchantIso, Model.MerchantCurrencies, new { ng_model = "paymentMethod.Parameters.MerchantIso", ng_init = "paymentMethod.Parameters.MerchantIso='" + Model.MerchantIso + "'", @class = "form-control" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Валюта магазина">
                Валюта в которой клиент будет оплачивать заказ
            </help-trigger>
        </div>
    </div>

