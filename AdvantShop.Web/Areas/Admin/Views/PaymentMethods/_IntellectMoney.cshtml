@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.IntellectMoneyPaymentModel


    <div class="form-group row middle-xs">
        <div class="col-xs-12">
            Не забудьте указать в настройках сервиса IntellectMoney <strong>протокол WebMoney</strong>.
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Идентификатор</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId", @class = "form-control", required = "required", validation_input_text = "Идентификатор" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Идентификатор">
                Идентификатор в системе IntellectMoney
            </help-trigger>
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Секретный код</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.SecretKey, new {ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control", required = "required", validation_input_text = "Секретный код" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Секретный ключ (Secret Key)">
                Секретный код
            </help-trigger>
        </div>
    </div>


