@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.PayAnyWayPaymentModel


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Номер расширенного счета</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId", @class = "form-control", required = "required", validation_input_text = "Номер расширенного счета" })
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Код проверки целостности данных</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.Signature, new { ng_model = "paymentMethod.Parameters.Signature", @class = "form-control", required = "required", validation_input_text = "Код проверки целостности данных" })
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Код валюты ISO3</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.CurrencyLabel, new { ng_model = "paymentMethod.Parameters.CurrencyLabel", @class = "form-control", required = "required", validation_input_text = "Код валюты ISO3" })
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Курс валюты</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.CurrencyValue, new { ng_model = "paymentMethod.Parameters.CurrencyValue", @class = "form-control", required = "required", validation_input_text = "Курс валюты" })
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Тестовый режим
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.TestMode, new { ng_model = "paymentMethod.Parameters.TestMode", ng_init = "paymentMethod.Parameters.TestMode=" + Model.TestMode.ToLowerString(), @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
        </label>
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Предварительный выбор платежной системы
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.UnitId, new { ng_model = "paymentMethod.Parameters.UnitId", @class = "form-control" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Предварительный выбор платежной системы">
            (1015 – МОНЕТА.РУ, 1020 – Яндекс.Деньги, 1017 – WebMoney и т.п.) Предварительный выбор платежной системы. <br><br>
            Список доступных способов оплаты для заданного счета можно посмотреть на странице «Рабочий кабинет / Способы оплаты» (<a href="https://www.moneta.ru/viewPaymentMethods.htm" target="_blank">https://www.moneta.ru/viewPaymentMethods.htm</a>)
        </help-trigger>
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Список идентификаторов платежных систем, которые необходимо показывать пользователю
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.LimitIds, new { ng_model = "paymentMethod.Parameters.LimitIds", @class = "form-control" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Список идентификаторов платежных систем, которые необходимо показывать пользователю">
            Список (разделенный запятыми) идентификаторов платежных систем, которые необходимо показывать пользователю в MONETA.Assistant.<br><br>
            Например, «1015,1017» - пользователю в MONETA.Assistant будут показаны только платежные системы МОНЕТА.РУ и WebMoney.
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        Используется онлайн касса?
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.UseKassa, new { ng_model = "paymentMethod.Parameters.UseKassa", ng_init = "paymentMethod.Parameters.UseKassa=" + Model.UseKassa.ToLowerString(), @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
        </label>
    </div>
</div>