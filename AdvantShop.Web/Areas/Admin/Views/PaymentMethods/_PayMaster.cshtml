@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.PaymasterPaymentModel

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Идентификатор сайта</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId", @class = "form-control", required = "required", validation_input_text = "Идентификатор сайта" })
    </div>
</div>



<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">Секретное слово</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.SecretWord, new { ng_model = "paymentMethod.Parameters.SecretWord", @class = "form-control", required = "required", validation_input_text = "Секретное слово" })
    </div>
</div>
