@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.BillUaPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Название компании</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.CompanyName, new { ng_model = "paymentMethod.Parameters.CompanyName", @class = "form-control", required = "required", validation_input_text = "Название компании" })
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Код</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.CompanyCode, new { ng_model = "paymentMethod.Parameters.CompanyCode", @class = "form-control", required = "required", validation_input_text = "Код" })
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Название банка</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.BankName, new { ng_model = "paymentMethod.Parameters.BankName", @class = "form-control", required = "required", validation_input_text = "Название банка" })
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">МФО банка</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.BankCode, new { ng_model = "paymentMethod.Parameters.BankCode", @class = "form-control", required = "required", validation_input_text = "МФО банка" })
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Кредитный номер</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.Credit, new { ng_model = "paymentMethod.Parameters.Credit", @class = "form-control", required = "required", validation_input_text = "Кредитный номер" })
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Номер счёта</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.CompanyEssentials, new { ng_model = "paymentMethod.Parameters.CompanyEssentials", @class = "form-control", required = "required", validation_input_text = "Номер счёта" })
        </div>
    </div>

