<!DOCTYPE html>
<html data-ng-strict-di data-ng-app="app" @Html.GetNgController()>
<head>
	<meta charset="utf-8">
	<meta name="generator" content="AdVantShop.NET">
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<title>@Html.GetPageTitle()</title>
	<base href="@UrlService.GetUrl()" />
	<meta name="Description" content="@Html.GetPageDescription()" />
	<meta name="Keywords" content="@Html.GetPageKeywords()" />
	@Html.GetCanonicalTag()
	@Html.Action("Favicon", "Common")
	@Html.Action("MetaData", "Common")
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400&amp;subset=cyrillic" rel="stylesheet">

	<script type="text/javascript" src="/vendors/jquery/jquery-2.1.4.js"></script>
	<script type="text/javascript" src="/scripts/business/jquery.lazy.min.js"></script>
	<script type="text/javascript" src="/scripts/business/jquery.lazy.youtube.min.js"></script>
	@*	<script type="text/javascript" src="/vendors/angular/angular.js"></script>*@
	<style>
		.ng-cloak, .x-ng-cloak, .ng-hide:not(.ng-hide-animate) {
			display: none !important
		}
	</style>

	<!--===== Script Source ========-->
	@*<script src="/scripts/business/jquery.js"></script>*@
	<script src="/scripts/business/bootstrap.js"></script>
	<script src="/scripts/business/owl.carousel.min.js"></script>
	<script src="/scripts/business/jquery.easing.1.3.min.js"></script>
	<!-- Magnific Popup core JS file -->
	<script src="/scripts/business/jquery.magnific-popup.min.js"></script>
	<script src="/scripts/business/custom.min.js"></script>
	<script>
		$(function () {
			$("iframe[data-src]").Lazy({
				afterLoad: function (element) {
					element.fadeIn(600);
				}
			});
		});
	</script>
</head>

<body class="">
	<div id="loader-wrapper">
		<div id="loader"></div>
		<div class="loader-section section-left"></div>
		<div class="loader-section section-right"></div>
	</div>
	@Html.GoggleTagManagerCounter()
	<div hidden>@Html.StaticBlock("LiveCounter")</div>
	@Html.Action("GoogleAnalytics", "Common")
	@Html.RenderModules("body_start")
	<div class="stretch-container">
		<header class="site-head">
			<div class="container container-fluid site-head-inner">
				<div class="row middle-xs">
					<div class="col-md-3 col-md-offset-1 site-head-logo-block site-head-logo">
						@Html.Action("Logo")
					</div>
					<div class="col-md-4"></div>
					<div class="col-md-3 site-head-phone-col">
						<div class="cs-t-1 site-head-phone">@Html.GetCityPhone()</div>
					</div>
				</div>
			</div>
		</header>
		<main class="">
			@RenderBody()
		</main>
	</div>

	@Html.Action("CookiesPolicy", "Common")

	<link rel="stylesheet" type="text/css" href="/scripts/_partials/cookies-policy/styles/cookies-policy.css">
	@Html.Partial("_FooterMinScripts")
	
</body>
</html>
