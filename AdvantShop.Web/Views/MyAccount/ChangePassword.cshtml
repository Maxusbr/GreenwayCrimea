@model AdvantShop.ViewModel.MyAccount.ChangePasswordViewModel
@using (Html.BeginForm("ChangePassword", "MyAccount", FormMethod.Post))
{
    <div class="h2">@T("MyAccount.ChangePassword.ChangePassword")</div>
    <span class="form-field-name vertical-interval-small">@T("MyAccount.ChangePassword.PasswordInfo")</span>
    <div class="row">
        <div class="col-xs-8">
            <label class="row middle-xs">
                <span class="col-xs-4">
                    <span class="form-field-name vertical-interval-xsmall">@T("MyAccount.ChangePassword.NewPassword")</span>
                </span>
                <span class="col-xs-8">
                    <span class="form-field-input vertical-interval-xsmall">@Html.PasswordFor(x => x.NewPassword, new { autocomplete = "off", @class = "input-small", name = "newPassword" })</span>
                </span>
            </label>
            <label class="row middle-xs">
                <span class="col-xs-4">
                    <span class="form-field-name vertical-interval-xsmall">@T("MyAccount.ChangePassword.NewPasswordConfirm")</span>
                </span>
                <span class="col-xs-8">
                    <span class="form-field-input vertical-interval-xsmall">@Html.PasswordFor(x => x.NewPasswordConfirm, new { autocomplete = "off", @class = "input-small", name = "newPasswordAgain" })</span>
                </span>
            </label>
            <label class="row middle-xs">
                <span class="col-xs-8 col-xs-offset-4">
                    <span class="form-field-input vertical-interval-xsmall">
                        <a href="@Url.RouteUrl("ForgotPassword")" class="link-forget">@T("MyAccount.ChangePassword.ForgotPassword")</a>
                    </span>
                </span>
            </label>
            <div class="row middle-xs">
                <span class="col-xs-8 col-xs-offset-4">
                    <span class="form-field-input vertical-interval-xsmall">
                        <input type="submit" class="btn btn-middle btn-action" value="@T("MyAccount.ChangePassword.Change")" />
                    </span>
                </span>
            </div>
        </div>
    </div>
}